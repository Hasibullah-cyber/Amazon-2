modules = ["nodejs-20", "web"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "pnpm run start"]
build = ["sh", "-c", "pnpm run build"]

[[ports]]
localPort = 3000

[workflows]
runButton = "Run Next.js App"

[[workflows.workflow]]
name = "Run Next.js App"
author = 43882621
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pnpm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pnpm run dev"

[[workflows.workflow]]
name = "Initialize Database"
author = 44234686
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "curl -X POST http://localhost:3000/api/init-db"
